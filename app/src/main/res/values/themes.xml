<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="appTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">#3629B7</item>
        <item name="colorPrimaryVariant">#5655B9</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">#5655B9</item>
        <item name="colorSecondaryVariant">#5655B9</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorError">@color/red</item>
        <item name="colorOnError">@color/white</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="colorOnBackground">@color/black</item>
    </style>

    <style name="mainTheme" parent="appTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:enforceNavigationBarContrast" tools:targetApi="q">false</item>
        <item name="android:enforceStatusBarContrast" tools:targetApi="q">false</item>
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="android:textColor">@color/colorText</item>

        <item name="snackbarStyle">@style/snackbar</item>
        <item name="snackbarTextViewStyle">@style/snackbar_text</item>

        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.App.SmallComponent</item>

        <item name="rippleColor">@color/transparent</item>
        <item name="itemRippleColor">@color/transparent</item>
        <item name="simpleItemSelectedRippleColor">@color/transparent</item>
        <item name="tabUnboundedRipple">@color/transparent</item>
        <item name="tabRippleColor">@color/transparent</item>
    </style>

    <style name="snackbar" parent="@style/Widget.MaterialComponents.Snackbar.FullWidth">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_gravity">center</item>
        <item name="backgroundTint">@color/pink</item>
    </style>

    <style name="snackbar_text" parent="@style/Widget.MaterialComponents.Snackbar.TextView">
        <item name="fontFamily">@font/body</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorText</item>
    </style>

    <style name="FragmentTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@android:color/transparent</item>
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabPaddingStart">@dimen/_5sdp</item>
        <item name="tabPaddingEnd">@dimen/_5sdp</item>
        <item name="tabBackground">@color/green_bg</item>
        <item name="tabTextAppearance">@style/TabText</item>
        <item name="tabSelectedTextColor">@color/green</item>
    </style>

    <style name="TabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="fontFamily">@font/body</item>
    </style>

    <style name="PageTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@android:color/transparent</item>
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabPaddingStart">@dimen/_5sdp</item>
        <item name="tabPaddingEnd">@dimen/_5sdp</item>
        <item name="tabBackground">@color/white</item>
        <item name="tabTextAppearance">@style/PageTabText</item>
        <item name="tabSelectedTextColor">@color/orange</item>
    </style>

    <style name="PageTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="fontFamily">@font/body</item>
    </style>

    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/radius_EditText</item>
    </style>

    <style name="AppTheme.TextInputLayout.OutlinedBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/edit_text_stroke_color</item>
        <item name="boxStrokeWidth">@dimen/border_EditText</item>
        <item name="hintTextAppearance">@style/TextInputLayoutFont</item>
        <item name="hintTextColor">@color/colorText</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:fontFamily">@font/body</item>
        <item name="boxStrokeErrorColor">@color/border_orange</item>
        <item name="errorTextColor">@color/red</item>
    </style>

    <style name="TextInputLayoutFont" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/body</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorText</item>
    </style>
</resources>